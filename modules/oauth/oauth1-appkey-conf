here=`readlink -f $0`; here=`dirname $here`
mkdir -p $1
root=`readlink -f $1`
name=$2
id=$3
secret=$4

# Configure an OAuth 1.0 app key
mkdir -p $root/cert
umask 0007

cat >>$root/cert/oauth-keys.conf <<EOF
# Generated by: oauth1-appkey-conf $*
AddAuthOAuth1AppKey $name $id $secret

EOF

