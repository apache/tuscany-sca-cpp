    <!-- Transport Outs -->
    <!-- ================================================= -->

    <!--
    <transportSender name="tcp" class="org.apache.axis2.transport.tcp.TCPTransportSender"/>
    <transportSender name="local" class="org.apache.axis2.transport.local.LocalTransportSender"/> 
