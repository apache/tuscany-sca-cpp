echo "Testing..."
here=`readlink -f $0`; here=`dirname $here`
curl_prefix=`cat $here/../../modules/http/curl.prefix`

# Setup
./start 2>/dev/null
sleep 2

# Test HTTP GET
mkdir -p tmp
$curl_prefix/bin/curl -L http://localhost:8090/ 2>/dev/null >tmp/login.html
grep "Login" tmp/login.html >/dev/null
rc=$?

# Cleanup
./stop
sleep 2

if [ "$rc" = "0" ]; then
    echo "OK"
fi
return $rc
